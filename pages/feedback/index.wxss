page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx;
  background-color: #fff;
  margin: 20rpx 10rpx;
  text-align: center;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: #ccc;
  border: solid 3rpx #eee;
  margin-bottom: 10rpx;
}
.fb_main .fb_content .fb_tool .upimg_item {
  margin-left: 30rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 40rpx;
}
.fb_main .form_btn_wrap button {
  color: white;
  margin: 0;
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: red;
}
