.swiper_index {
  color: var(--themeColor);
}
.swiper_index swiper {
  width: 750rpx;
  height: 340rpx;
}
.swiper_index swiper image {
  width: 100%;
}
.category_index {
  display: flex;
}
.category_index navigator {
  flex: 1;
  padding: 20rpx;
}
.category_index navigator image {
  width: 100%;
}
.index_productshow .proshow_index .proshow_title {
  padding: 10rpx 0;
}
.index_productshow .proshow_index .proshow_title image {
  width: 100%;
}
.index_productshow .proshow_index .product_content {
  overflow: hidden;
}
.index_productshow .proshow_index .product_content navigator {
  float: left;
  width: 33.333%;
}
.index_productshow .proshow_index .product_content navigator:nth-last-child(-n+4) {
  height: 27.72960776vw;
  border-left: 10rpx solid #fff;
}
.index_productshow .proshow_index .product_content navigator:nth-child(2),
.index_productshow .proshow_index .product_content navigator:nth-child(3) {
  border-bottom: #fff solid 10rpx;
}
.index_productshow .proshow_index .product_content navigator image {
  width: 100%;
  height: 100%;
}
